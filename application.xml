<?xml version="1.0" encoding="utf-8" standalone="no"?>
<application xmlns="http://ns.adobe.com/air/application/1.0">
    
    <id>PownceDesktop</id>
    <filename>Pownce</filename>
    <name>Pownce</name>
    <version>2.0</version>
    <description>Pownce is a way to send stuff to your friends. What kind of stuff? You can send just about anything: music, photos, messages, links, events, and more.</description>
    <copyright>Copyright (c) 2008 Megatechtronium Inc.</copyright>
    <initialWindow>
        <content>PownceDesktop.html</content>
        <title>Pownce</title>
        <systemChrome>standard</systemChrome>
        <transparent>false</transparent>
        <visible>true</visible>
        <minimizable>true</minimizable>
        <maximizable>true</maximizable>
        <resizable>true</resizable>
        <width>370</width>
        <height>600</height>
        <x>200</x>
        <y>200</y>
        <minSize>370 400</minSize>
        <!--maxSize>1280 1024</maxSize-->
    </initialWindow>
    
    <!-- The subpath of the standard default installation location to use. Optional. -->
    <!-- <installFolder></installFolder> -->
    
